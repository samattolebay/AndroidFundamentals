<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fifteen.FifteenActivity">

    <TextView
        android:id="@+id/tvSeparate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_person_will_be_passed_separately"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/etNameSeparate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeparate" />

    <EditText
        android:id="@+id/etAgeSeparate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etNameSeparate"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/etCountrySeparate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/country"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/etAgeSeparate"
        tools:layout_editor_absoluteX="42dp" />

    <TextView
        android:id="@+id/tvClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_person_will_be_passed_by_the_class"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/etCountrySeparate"
        tools:layout_editor_absoluteX="55dp" />

    <EditText
        android:id="@+id/etNameClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClass" />

    <EditText
        android:id="@+id/etAgeClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etNameClass"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/etCountryClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/country"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/etAgeClass"
        tools:layout_editor_absoluteX="42dp" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCountryClass" />
</androidx.constraintlayout.widget.ConstraintLayout>